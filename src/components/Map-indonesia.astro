---
// Import data provinsi
import { Provinces } from "../constant/province";

const content = {
    id: {
        eyebrow: "Jelajahi",
        title: "Peta Budaya Indonesia",
        subtitle:
            "Klik pada region untuk menemukan kekayaan budaya setiap wilayah",
    },
    en: {
        eyebrow: "Explore",
        title: "Indonesia Cultural Map",
        subtitle:
            "Click on a region to discover the cultural richness of each area",
    },
};
---

<section class="map-section" id="map">
    <div class="section-header fade-up">
        <span
            class="section-header__eyebrow"
            data-content-id={content.id.eyebrow}
            data-content-en={content.en.eyebrow}
        >
            {content.id.eyebrow}
        </span>
        <h2
            class="section-header__title"
            data-content-id={content.id.title}
            data-content-en={content.en.title}
        >
            {content.id.title}
        </h2>
        <p
            class="section-header__subtitle"
            data-content-id={content.id.subtitle}
            data-content-en={content.en.subtitle}
        >
            {content.id.subtitle}
        </p>
    </div>

    <svg
        id="indonesia-map"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 792.54596 316.66394"
        class="map-svg fade-up"
    >
        <g>
            {
                Provinces.map((province, idx) => (
                    <path
                        data-idx={idx}
                        id={province.id}
                        data-title={province.title}
                        data-title-en={province.title_en || ""}
                        data-short-description={
                            province.short_description || ""
                        }
                        data-description={province.description || ""}
                        data-image={province.image_url || ""}
                        data-population={province.population || ""}
                        data-area={province.area_km2 || ""}
                        data-capital={province.capital || ""}
                        data-region={province.region || ""}
                        data-island={province.island || ""}
                        data-coordinates={province.coordinates?.join(",") || ""}
                        d={province.path}
                        class="province-path"
                        fill="#dc2626"
                        stroke="#ffffff"
                        stroke-width="0.5"
                    />
                ))
            }
        </g>
    </svg>

    <!-- Tooltip -->
    <div id="tooltip" class="tooltip hidden">
        <div class="tooltip-content">
            <div id="tooltip-description" class="tooltip-desc hidden">
                <p></p>
            </div>
            <div class="tooltip-title-box">
                <div id="tooltip-title" class="tooltip-title"></div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="province-modal" class="modal hidden">
        <div class="modal-overlay">
            <div class="modal-container">
                <div class="modal-scroll">
                    <!-- Header dengan Image -->
                    <div class="modal-header">
                        <img
                            id="modal-image"
                            src=""
                            alt=""
                            class="modal-image"
                        />
                        <div class="modal-header-gradient"></div>
                        <div class="modal-header-content">
                            <h2 id="modal-title" class="modal-title"></h2>
                            <p id="modal-title-en" class="modal-title-en"></p>
                        </div>
                        <button id="modal-close" class="modal-close">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <line x1="18" y1="6" x2="6" y2="18"></line>
                                <line x1="6" y1="6" x2="18" y2="18"></line>
                            </svg>
                        </button>
                    </div>

                    <!-- Content -->
                    <div class="modal-body">
                        <!-- Short Description -->
                        <div
                            id="modal-short-description"
                            class="card card-highlight hidden"
                        >
                            <p></p>
                        </div>

                        <!-- Description -->
                        <div id="modal-description" class="card hidden">
                            <h3 id="modal-about-title" class="card-title"></h3>
                            <p></p>
                        </div>

                        <!-- Info Grid -->
                        <div class="info-grid">
                            <div
                                id="modal-capital-container"
                                class="info-card hidden"
                            >
                                <h4 class="info-label">Ibu Kota</h4>
                                <p id="modal-capital" class="info-value"></p>
                            </div>
                            <div
                                id="modal-population-container"
                                class="info-card hidden"
                            >
                                <h4 class="info-label">Populasi</h4>
                                <p id="modal-population" class="info-value"></p>
                            </div>
                            <div
                                id="modal-area-container"
                                class="info-card hidden"
                            >
                                <h4 class="info-label">Luas Wilayah</h4>
                                <p id="modal-area" class="info-value"></p>
                            </div>
                            <div
                                id="modal-region-container"
                                class="info-card hidden"
                            >
                                <h4 class="info-label">Region</h4>
                                <p id="modal-region" class="info-value"></p>
                            </div>
                            <div
                                id="modal-island-container"
                                class="info-card hidden"
                            >
                                <h4 class="info-label">Pulau</h4>
                                <p id="modal-island" class="info-value"></p>
                            </div>
                            <div
                                id="modal-coordinates-container"
                                class="info-card hidden"
                            >
                                <h4 class="info-label">Koordinat</h4>
                                <p id="modal-coordinates" class="info-value">
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

