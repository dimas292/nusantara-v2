<style>
    .hidden {
        display: none !important;
    }

    /* Section */
    .map-section {
        width: 100%;
        padding: 3rem 0;
        background: linear-gradient(to bottom right, #f9fafb, #ffffff, #fef2f2);
    }

    /* Header */
    .map-header {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .map-title {
        font-size: 1.875rem;
        font-weight: 700;
        color: #000;
        margin-bottom: 1rem;
    }

    .text-gradient {
        background: linear-gradient(to right, #dc2626, #991b1b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .map-description {
        color: #000;
        max-width: 48rem;
        margin: 0 auto 1rem;
    }

    .map-instruction {
        font-size: 0.875rem;
        color: #4b5563;
        max-width: 42rem;
        margin: 0 auto 2rem;
        font-style: italic;
    }

    .text-red {
        color: #dc2626;
        font-weight: 600;
    }

    /* SVG Map */
    .map-svg {
        width: 100%;
        height: auto;
        max-height: 500px;
        margin-bottom: var(--space-4xl);
    }

    .province-path {
        transition: all 0.2s ease;
        cursor: pointer;
    }

    /* Tooltip */
    .tooltip {
        position: fixed;
        z-index: 50;
        pointer-events: none;
        animation: fadeIn 0.2s ease;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-100%) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(-100%) scale(1);
        }
    }

    .tooltip-content {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
    }

    .tooltip-desc {
        width: 12rem;
        overflow: hidden;
        backdrop-filter: blur(24px);
        background: rgba(255, 255, 255, 0.9);
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        border-radius: 1rem;
        padding: 0.75rem;
    }

    .tooltip-desc p {
        color: #000;
        font-size: 0.875rem;
        margin: 0;
    }

    .tooltip-title-box {
        position: relative;
        backdrop-filter: blur(24px);
        background: rgba(0, 0, 0, 0.9);
        color: #fff;
        border-radius: 0.75rem;
        padding: 0.75rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }

    .tooltip-title {
        font-weight: 700;
        font-size: 0.875rem;
        white-space: nowrap;
        padding-left: 0.5rem;
    }

    .corner {
        position: absolute;
        width: 0.75rem;
        height: 0.75rem;
    }

    .corner-tr {
        top: -2px;
        right: -2px;
        border-top: 2px solid #dc2626;
        border-right: 2px solid #dc2626;
    }

    .corner-tl {
        top: -2px;
        left: -2px;
        border-top: 2px solid #dc2626;
        border-left: 2px solid #dc2626;
    }

    .corner-br {
        bottom: -2px;
        right: -2px;
        border-bottom: 2px solid #dc2626;
        border-right: 2px solid #dc2626;
    }

    .corner-bl {
        bottom: -2px;
        left: -2px;
        border-bottom: 2px solid #dc2626;
        border-left: 2px solid #dc2626;
    }

    /* Modal */
    .modal {
        position: fixed;
        inset: 0;
        z-index: 50;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
    }

    .modal-overlay {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 1rem;
    }

    .modal-container {
        width: 95vw;
        max-width: 72rem;
        height: 90vh;
        backdrop-filter: blur(48px);
        background: rgba(255, 255, 255, 0.2);
        border: 2px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        border-radius: 1.5rem;
        overflow: hidden;
    }

    .modal-scroll {
        height: 100%;
        overflow-y: auto;
        overflow-x: hidden;
    }

    /* Modal Header */
    .modal-header {
        position: relative;
        height: 300px;
        width: 100%;
        overflow: hidden;
        border-radius: 1.5rem 1.5rem 0 0;
    }

    .modal-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .modal-header-gradient {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            to top,
            rgba(0, 0, 0, 0.8),
            rgba(0, 0, 0, 0.5),
            transparent
        );
    }

    .modal-header-content {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 1.5rem;
    }

    .modal-title {
        font-size: 1.875rem;
        font-weight: 700;
        color: #fff;
        margin: 0 0 0.5rem;
    }

    .modal-title-en {
        font-size: 1.125rem;
        color: #e5e7eb;
        margin: 0;
    }

    .modal-close {
        position: absolute;
        top: 1rem;
        right: 1rem;
        color: #fff;
        background: rgba(0, 0, 0, 0.5);
        border: none;
        border-radius: 50%;
        padding: 0.5rem;
        cursor: pointer;
        transition: background 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .modal-close:hover {
        background: rgba(0, 0, 0, 0.7);
    }

    /* Modal Body */
    .modal-body {
        padding: 1.5rem;
        max-width: 72rem;
        margin: 0 auto;
        backdrop-filter: blur(4px);
        background: rgba(255, 255, 255, 0.1);
    }

    .card {
        margin-bottom: 2rem;
        backdrop-filter: blur(12px);
        background: rgba(255, 255, 255, 0.4);
        padding: 1.5rem;
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .card-highlight p {
        font-size: 1.125rem;
        color: #1f2937;
        line-height: 1.75;
        font-weight: 500;
        margin: 0;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #111827;
        margin: 0 0 1rem;
    }

    .card p {
        font-size: 1rem;
        color: #374151;
        line-height: 1.75;
        margin: 0;
    }

    /* Info Grid */
    .info-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
        margin-bottom: 2.5rem;
    }

    .info-card {
        backdrop-filter: blur(16px);
        background: rgba(255, 255, 255, 0.5);
        padding: 1.25rem;
        border-radius: 0.75rem;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.4);
        transition: background 0.2s ease;
    }

    .info-card:hover {
        background: rgba(255, 255, 255, 0.6);
    }

    .info-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: #4b5563;
        margin: 0 0 0.5rem;
    }

    .info-value {
        font-size: 1.125rem;
        font-weight: 700;
        color: #111827;
        margin: 0;
    }

    /* Responsive */
    @media (min-width: 640px) {
        .map-section {
            padding: 3.5rem 0;
        }

        .map-header {
            padding: 0 1.5rem;
        }

        .map-title {
            font-size: 2.25rem;
        }

        .map-instruction {
            font-size: 1rem;
            margin-bottom: 2.5rem;
        }

        .modal-header {
            height: 350px;
        }

        .modal-header-content {
            padding: 2rem;
        }

        .modal-title {
            font-size: 2.25rem;
        }

        .modal-title-en {
            font-size: 1.25rem;
        }

        .modal-body {
            padding: 2rem;
        }

        .info-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1.25rem;
        }
    }

    @media (min-width: 1024px) {
        .map-section {
            padding: 4rem 0;
        }

        .map-header {
            padding: 0 2rem;
        }

        .map-title {
            font-size: 3rem;
            margin-bottom: 1.5rem;
        }

        .map-instruction {
            margin-bottom: 3rem;
        }

        .modal-header {
            height: 400px;
        }

        .modal-header-content {
            padding: 3rem;
        }

        .modal-title {
            font-size: 3rem;
        }

        .modal-title-en {
            font-size: 1.5rem;
        }

        .modal-body {
            padding: 2.5rem;
        }

        .info-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>
