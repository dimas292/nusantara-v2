---
import { Instagram, Linkedin, Mail, MapPin } from "lucide-astro";

const currentYear = new Date().getFullYear();

const links = [
    { labelId: "Beranda", labelEn: "Home", href: "#home" },
    { labelId: "Pengenalan", labelEn: "Intro", href: "#intro" },
    { labelId: "Sejarah", labelEn: "History", href: "#history" },
    { labelId: "Peta", labelEn: "Map", href: "#map" },
    { labelId: "Galeri", labelEn: "Gallery", href: "#gallery" },
    { labelId: "Edukasi", labelEn: "Education", href: "#education" },
];

const socials = [
    {
        name: "Instagram",
        icon: Instagram,
        url: "https://www.instagram.com/dimass.dev/",
    },
    { name: "Email", icon: Mail, url: "mailto:dimasixc22@gmail.com" },
    {
        name: "LinkedIn",
        icon: Linkedin,
        url: "https://www.linkedin.com/in/dimas-b7041b27b/",
    },
];
---

<footer class="footer">
    <div class="container">
        <div class="footer__content">
            <!-- Brand -->
            <div class="footer__brand">
                <a href="#home" class="footer__logo">
                    <img src="/NUSANTARA.svg" alt="Nusantara" class="footer__logo-img" />
                </a>
                <p class="footer__tagline" id="footer-tagline">
                    Menjelajahi kekayaan budaya Indonesia
                </p>
                <div class="footer__socials">
                    {
                        socials.map((social) => (
                            <a
                                href={social.url}
                                class="footer__social"
                                aria-label={social.name}
                            >
                                <social.icon size={20} />
                            </a>
                        ))
                    }
                </div>
            </div>

            <!-- Navigation -->
            <div class="footer__nav">
                <h4 class="footer__nav-title" id="footer-nav-title">
                    Navigasi
                </h4>
                <ul class="footer__nav-list">
                    {
                        links.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="footer__nav-link"
                                    data-label-id={link.labelId}
                                    data-label-en={link.labelEn}
                                >
                                    {link.labelId}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Contact -->
            <div class="footer__contact">
                <h4 class="footer__nav-title" id="footer-contact-title">
                    Kontak
                </h4>
                <p class="footer__contact-item">
                    <Mail size={16} class="footer__icon" />
                    <span>dimasixc22@gmail.com</span>
                </p>
                <p class="footer__contact-item">
                    <MapPin size={16} class="footer__icon" />
                    <span>Jakarta, Indonesia</span>
                </p>
            </div>
        </div>

        <!-- Bottom -->
        <div class="footer__bottom">
            <p class="footer__credits" id="footer-credits">
                Dibuat dengan ❤️ untuk melestarikan budaya Indonesia
            </p>
        </div>
    </div>
</footer>

<style>
    .footer {
        background-color: var(--charcoal);
        color: var(--warm-white);
        padding: var(--space-4xl) 0 var(--space-xl);
    }

    .footer__content {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr;
        gap: var(--space-3xl);
        padding-bottom: var(--space-3xl);
        border-bottom: 1px solid rgba(250, 247, 242, 0.1);
    }

    /* Brand */
    .footer__brand {
        max-width: 320px;
    }

    .footer__logo {
        display: inline-block;
        margin-bottom: var(--space-md);
    }

    .footer__logo-img {
        height: 180px;
        width: auto;
        filter: brightness(0) invert(1);
    }

    .footer__logo-text {
        font-family: var(--font-serif);
        font-size: var(--text-2xl);
        font-weight: 700;
        color: var(--warm-white);
    }

    .footer__tagline {
        font-size: var(--text-sm);
        color: rgba(250, 247, 242, 0.7);
        margin-bottom: var(--space-lg);
        line-height: 1.6;
    }

    .footer__socials {
        display: flex;
        gap: var(--space-sm);
    }

    .footer__social {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        height: 44px;
        background-color: rgba(250, 247, 242, 0.05);
        border-radius: var(--radius-md);
        font-size: 1.25rem;
        transition: all var(--transition-fast);
    }

    /* Navigation */
    .footer__nav-title {
        font-family: var(--font-sans);
        font-size: var(--text-xs);
        font-weight: 600;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--terracotta);
        margin-bottom: var(--space-lg);
    }

    .footer__nav-list {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: var(--space-sm);
    }

    .footer__nav-link {
        font-size: var(--text-sm);
        color: rgba(250, 247, 242, 0.7);
        transition: color var(--transition-fast);
    }

    .footer__nav-link:hover {
        color: var(--warm-white);
    }

    /* Contact */
    .footer__contact-item {
        font-size: var(--text-sm);
        color: rgba(250, 247, 242, 0.7);
        margin-bottom: var(--space-sm);
        display: flex;
        align-items: center;
        gap: var(--space-xs);
    }

    /* Bottom */
    .footer__bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: var(--space-xl);
    }

    .footer__copyright {
        font-size: var(--text-xs);
        color: rgba(250, 247, 242, 0.5);
    }

    .footer__credits {
        font-size: var(--text-xs);
        color: rgba(250, 247, 242, 0.5);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .footer__content {
            grid-template-columns: 1fr;
            gap: var(--space-2xl);
            text-align: center;
        }

        .footer__brand {
            max-width: 100%;
        }

        .footer__socials {
            justify-content: center;
        }

        .footer__nav-list {
            align-items: center;
        }

        .footer__bottom {
            flex-direction: column;
            gap: var(--space-sm);
            text-align: center;
        }
    }
</style>

<script>
    // Language change handler
    window.addEventListener("langchange", (e: CustomEvent) => {
        const lang = e.detail.lang;

        // Update nav links
        document.querySelectorAll(".footer__nav-link").forEach((el) => {
            const labelId = el.getAttribute("data-label-id");
            const labelEn = el.getAttribute("data-label-en");
            el.textContent = lang === "id" ? labelId : labelEn;
        });

        // Update other texts
        const translations: Record<string, { id: string; en: string }> = {
            "footer-tagline": {
                id: "Menjelajahi kekayaan budaya Indonesia",
                en: "Exploring the rich culture of Indonesia",
            },
            "footer-nav-title": { id: "Navigasi", en: "Navigation" },
            "footer-contact-title": { id: "Kontak", en: "Contact" },
            "footer-rights": {
                id: "Hak Cipta Dilindungi.",
                en: "All Rights Reserved.",
            },
            "footer-credits": {
                id: "Dibuat dengan ❤️ untuk melestarikan budaya Indonesia",
                en: "Made with ❤️ to preserve Indonesian culture",
            },
        };

        Object.entries(translations).forEach(([id, texts]) => {
            const el = document.getElementById(id);
            if (el) el.textContent = lang === "id" ? texts.id : texts.en;
        });
    });
</script>
